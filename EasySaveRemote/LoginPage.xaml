<Window x:Class="EasySaveRemote.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginPage" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Nom d'utilisateur:" Margin="10" Grid.Row="0"/>
        <TextBox x:Name="tboxIpAddress" Margin="10" Grid.Row="1"/>
        
        <TextBlock Text="Mot de passe:" Margin="10" Grid.Row="2"/>
        <TextBox x:Name="tboxPort" Margin="10" Grid.Row="3"/>
        
        <Button x:Name="btnLogin" Click="btnLogin_Click" Content="Se connecter" Margin="10" Grid.Row="4"/>
    </Grid>
</Window>