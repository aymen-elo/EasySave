    <Grid>
        <Label x:Name="lblLogFormat" Content="Log Format:" HorizontalAlignment="Left" Margin="20,18,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="JSON" x:Name="rbJson" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="96,21,0,0"/>
        <RadioButton Content="XML" x:Name="rbXml" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="160,21,0,0"/>

        <Label x:Name="lblBigFile" Content="Big File Size:" HorizontalAlignment="Left" Margin="20,58,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblPrioList" Content="Priority Extension List:" HorizontalAlignment="Left" Margin="20,98,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblCipherList" Content="Encrypted Extension List:" HorizontalAlignment="Left" Margin="20,138,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblEncryptionKey" Content="Encryption Key:" HorizontalAlignment="Left" Margin="20,178,0,0" VerticalAlignment="Top"/>

        <TextBox x:Name="tboxBigFile" HorizontalAlignment="Left" Margin="160,58,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="tboxPrioList" HorizontalAlignment="Left" Margin="160,98,0,0" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="tboxCipherList" HorizontalAlignment="Left" Margin="160,138,0,0" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="tboxEncryptionKey" HorizontalAlignment="Left" Margin="160,178,0,0" VerticalAlignment="Top" Width="200"/>

        <Button Content="Save" Click="btnSave_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,226,0,0" Width="80"/>
    </Grid>
</Window>
